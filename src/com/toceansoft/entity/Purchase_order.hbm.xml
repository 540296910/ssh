<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.toceansoft.entity"  >
	<class name="Purchase_order" table="Purchase_order" lazy="false">
		<id name="po_no" column="po_no">
			<generator class="native"></generator>
		</id>
		<property name="description" column="description" length="2000"></property>
		<property name="company" column="company" length="50"></property>
	</class>	
</hibernate-mapping>